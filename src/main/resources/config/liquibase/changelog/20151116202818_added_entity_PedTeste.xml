<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity PedTeste.
    -->
    <changeSet id="20151116202818" author="jhipster">
        <createTable tableName="ped_teste">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="dt_prevista_entrega" type="date"/>
            <column name="dt_prevista_entrega_zoned" type="timestamp"/>
        </createTable>
        <dropDefaultValue tableName="ped_teste" columnName="dt_prevista_entrega_zoned" columnDataType="datetime"/>

        
        <createTable tableName="ped_teste_produtoped">
            <column name="produtopeds_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="ped_testes_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="ped_testes_id, produtopeds_id" tableName="ped_teste_produtoped"/>

        <addForeignKeyConstraint baseColumnNames="ped_testes_id"
                                 baseTableName="ped_teste_produtoped"
                                 constraintName="fk_pedteste_produtoped_produto_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ped_teste"/>

        <addForeignKeyConstraint baseColumnNames="produtopeds_id"
                                 baseTableName="ped_teste_produtoped"
                                 constraintName="fk_produto_produtoped_pedteste_id"
                                 referencedColumnNames="id"
                                 referencedTableName="produto"/>
        
    </changeSet>
</databaseChangeLog>

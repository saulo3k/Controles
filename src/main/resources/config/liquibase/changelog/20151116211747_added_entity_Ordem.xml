<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Ordem.
    -->
    <changeSet id="20151116211747" author="jhipster">
        <createTable tableName="ordem">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="periodo_pedido_inicio" type="date"/>
            <column name="periodo_pedido_fim" type="date"/>
            <column name="dt_prevista_separacao" type="date"/>
            <column name="dt_real_separacao" type="date"/>
            <column name="dt_prevista_entrega" type="date"/>
            <column name="dt_real_entrega" type="date"/>
            <column name="data_pedido" type="date"/>
            <column name="ordem_cliente_id" type="bigint"/>
            <column name="ordem_user_id" type="bigint"/>
        </createTable>
        
        <createTable tableName="ordem_ordem_produto">
            <column name="ordem_produtos_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="ordems_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="ordems_id, ordem_produtos_id" tableName="ordem_ordem_produto"/>

        <addForeignKeyConstraint baseColumnNames="ordems_id"
                                 baseTableName="ordem_ordem_produto"
                                 constraintName="fk_ordem_ordem_produto_produto_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ordem"/>

        <addForeignKeyConstraint baseColumnNames="ordem_produtos_id"
                                 baseTableName="ordem_ordem_produto"
                                 constraintName="fk_produto_ordem_produto_ordem_id"
                                 referencedColumnNames="id"
                                 referencedTableName="produto"/>
        
        <addForeignKeyConstraint baseColumnNames="ordem_cliente_id"
                                 baseTableName="ordem"
                                 constraintName="fk_ordem_ordem_cliente_id"
                                 referencedColumnNames="id"
                                 referencedTableName="cliente"/>

        <addForeignKeyConstraint baseColumnNames="ordem_user_id"
                                 baseTableName="ordem"
                                 constraintName="fk_ordem_ordem_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

    </changeSet>
</databaseChangeLog>
